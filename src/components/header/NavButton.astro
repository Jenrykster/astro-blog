---
interface Props {
  label: string;
  link: string;
}
const { label, link } = Astro.props;
---

<a href={link} class="text-inherit font-body self-center">
  <div
    class="flex transition-colors justify-center w-28 px-4 py-2 border-primary border rounded-2xl text-primary hover:bg-primary hover:text-background hover:cursor-pointer"
  >
    {label}
  </div>
</a>
